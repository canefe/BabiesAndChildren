<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>BabyState0</defName>
    <description>This child is still growing. Encourage them to perform activities that help them develop.</description>
    <hediffClass>BabiesAndChildren.Hediff_ChildhoodStages</hediffClass>
    <label>child is growing</label>
    <initialSeverity>0.1</initialSeverity>
    <stages>
      <li>
        <label>baby</label>
        <minSeverity>0.01</minSeverity>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>toddler</label>
        <minSeverity>0.5</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-1.0</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>child</label>
        <minSeverity>0.75</minSeverity>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>teenager</label>
        <minSeverity>0.9</minSeverity>
      </li>
    </stages>
  </HediffDef>
</Defs>