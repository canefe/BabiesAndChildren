<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <!--Should be Apparel_Toddler_Beanie but i'm scared of changing def names-->
    <defName>Apparel_Baby_Beanie</defName>
    <label>toddler beanie</label>
    <description>A tiny, adorable cap. Great for keeping toddlers warm in the winter.</description>
    <recipeMaker>
      <researchPrerequisite />
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/babyclothes/Beanie_Fat_north</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.25</drawSize>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<tradeability>Sellable</tradeability>
    <statBases>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.06</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>-2</Insulation_Heat>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
		<generateCommonality>0</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/babyclothes/Beanie</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>RGBA(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>RGBA(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
    <generateAllowChance>0</generateAllowChance>
	<thingSetMakerTags>
      <li>BabyGear</li>
    </thingSetMakerTags>
  </ThingDef>

