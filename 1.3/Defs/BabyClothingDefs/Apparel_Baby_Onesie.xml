<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <!--Should be Apparel_Toddler_Onesie but i'm scared of changing def names-->
    <defName>Apparel_Baby_Onesie</defName>
    <label>toddler onesie</label>
    <description>A simple garment worn by a toddler.</description>
    <recipeMaker>
      <researchPrerequisite />
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/babyclothes/Onesie_Fat_north</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.75</drawSize>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <tradeability>Sellable</tradeability>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <Mass>0.10</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>20</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
		<generateCommonality>0</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/babyclothes/Onesie</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>RGBA(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>RGBA(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
    <generateAllowChance>0</generateAllowChance>
    <thingSetMakerTags><li>BabyGear</li></thingSetMakerTags>
  </ThingDef>
    
