<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThoughtDef>
    <defName>IAmPregnant</defName>
    <durationDays>3</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Pregnant</label>
        <description>I'm going to have a baby!</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>PartnerIsPregnant</defName>
    <durationDays>3</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Partner is pregnant</label>
        <description>We're going to have a baby!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>WeGotPregnant</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>45</durationDays>
    <stackLimit>300</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>we're pregnant</label>
        <baseOpinionOffset>30</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>WeHadBabies</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>240</durationDays>
    <stackLimit>300</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>had children together</label>
        <baseOpinionOffset>40</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>PostPartumDepression</defName>
    <durationDays>5</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>post partum depression</label>
        <description>Shouldn't I feel happy about having a child...? I just feel overwhelmed. I don't think I can do this.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
      <li>
        <label>post partum depression</label>
        <description>I can't take care of a child; I can't even take care of myself. I'm a horrible mother.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>BabyStillborn</defName>
    <durationDays>15</durationDays>
    <stackLimit>3</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>my baby was stillborn</label>
        <description>My child died in utero.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>IGaveBirthFirstTime</defName>
    <durationDays>15</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>new mother</label>
        <description>I've brought a child into the world; I'm a mother now!</description>
        <baseMoodEffect>25</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>IGaveBirth</defName>
    <durationDays>15</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>gave birth</label>
        <description>I've brought another child into the world!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>PartnerGaveBirth</defName>
    <durationDays>12</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>new child</label>
        <description>My child was born!</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>LateTermAbortion</defName>
    <durationDays>8</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Abrasive</li>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>late term abortion</label>
        <description>My fetus was aborted. It looked just like a little baby, but so still and quiet.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
      <li>
        <label>my baby was aborted</label>
        <description>My baby was aborted just before it could be born. Seeing it lying there motionless- there's a horrible pain in my heart that won't go away.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>MyChildGrowing</defName>
    <durationDays>7</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>my child is growing up</label>
        <description>How amazing it is that children grow up in the blink of an eye!</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>